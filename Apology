<script>
const ignore = document.getElementById("ignore");
const forgive = document.getElementById("forgive");
const p1 = document.getElementById("page1");
const p2 = document.getElementById("page2");
const msg = document.getElementById("msg");

ignore.addEventListener("mouseover",()=>{
  ignore.style.transform=`translate(${Math.random()*200-100}px,${Math.random()*100-50}px)`;
});

forgive.onclick=()=>{
  p1.classList.add("hidden");
  p2.classList.remove("hidden");
  const name = new URLSearchParams(location.search).get("name") || "you";
  msg.innerText = `Thank you for giving me another chance, ${name}.
I promise Iâ€™ll do better.`;
};
