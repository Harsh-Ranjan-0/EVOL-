<script>
const no = document.getElementById("no");
const yes = document.getElementById("yes");
const q = document.getElementById("q");
const a = document.getElementById("a");
const final = document.getElementById("final");

no.onmouseover=()=>{
  no.style.left=Math.random()*200+"px";
  no.style.top=Math.random()*150+"px";
};

yes.onclick=()=>{
  q.classList.add("hidden");
  a.classList.remove("hidden");
  const name = new URLSearchParams(location.search).get("name") || "my forever";
  final.innerText = `${name}, will you marry me and make life beautiful together?`;
};
